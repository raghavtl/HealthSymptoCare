import React from 'react';

// Create the auth context
const AuthContext = React.createContext(null);

// Custom hook to use the auth context
export const useAuth = () => {
  const context = React.useContext(AuthContext);
  if (!context) {
    throw new Error('useAuth must be used within an AuthProvider');
  }
  return context;
};

// Auth provider component using class component instead of hooks
export class AuthProvider extends React.Component {
  constructor(props) {
    super(props);
    this.state = {
      currentUser: null,
      loading: true,
      error: ''
    };
  }

  componentDidMount() {
    // Check if user is already logged in
    const token = localStorage.getItem('token');
    const user = localStorage.getItem('user');
    
    if (token && user) {
      try {
        this.setState({ 
          currentUser: JSON.parse(user),
          loading: false
        });
      } catch (e) {
        console.error('Error parsing user from localStorage:', e);
        localStorage.removeItem('user');
        localStorage.removeItem('token');
        this.setState({ loading: false });
      }
    } else {
      this.setState({ loading: false });
    }
  }

  // Login function
  login = async (email, password) => {
    this.setState({ loading: true, error: '' });
    
    try {
      // Simplified login for testing
      const user = { email, role: 'user' };
      localStorage.setItem('token', 'test-token');
      localStorage.setItem('user', JSON.stringify(user));
      
      this.setState({ currentUser: user });
      return user;
    } catch (error) {
      const errorMessage = error.message || 'Login failed';
      this.setState({ error: errorMessage });
      throw error;
    } finally {
      this.setState({ loading: false });
    }
  };
  
  // Register function
  register = async (username, email, password) => {
    this.setState({ loading: true, error: '' });
    
    try {
      // Simplified registration for testing
      return { user: { email, username, role: 'user' } };
    } catch (error) {
      const errorMessage = error.message || 'Registration failed';
      this.setState({ error: errorMessage });
      throw error;
    } finally {
      this.setState({ loading: false });
    }
  };
  
  // Logout function
  logout = () => {
    localStorage.removeItem('token');
    localStorage.removeItem('user');
    this.setState({ currentUser: null });
  };
  
  // Check if user is admin
  isAdmin = () => {
    return this.state.currentUser?.role === 'admin';
  };

  render() {
    const { currentUser, loading, error } = this.state;
    const value = {
      currentUser,
      loading,
      error,
      login: this.login,
      register: this.register,
      logout: this.logout,
      isAdmin: this.isAdmin
    };
    
    return (
      <AuthContext.Provider value={value}>
        {!loading ? this.props.children : <div>Loading...</div>}
      </AuthContext.Provider>
    );
  }
}